<Window x:Class="SmartSearchScreen.Opening"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Opening Page" Height="300" Width="500"
        WindowStartupLocation="CenterScreen" WindowStyle="None" ShowInTaskbar="False">
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="#1E2D3A"/>
        </Grid.Background>

        <TextBlock x:Name="OpeningText"
           HorizontalAlignment="Center" VerticalAlignment="Center"
           FontSize="48" Foreground="White" FontWeight="Bold">
    <Run x:Name="SSSRun" Text="SSS"/>
        </TextBlock>
    </Grid>
</Window>
